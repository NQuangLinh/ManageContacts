@model ManageContact.Models.NetworkOperator

@{
    ViewBag.Title = "EditNetworkOperator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit Network Operator</h2>

@using (Html.BeginForm("EditNetworkOperator", "NetworkOperator", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.IDNetworkOperator)

        <div class="form-group">
            @Html.LabelFor(model => model.NetworkOperatorName, "Network Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NetworkOperatorName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NetworkOperatorName, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "NetworkOperator")
</div>
